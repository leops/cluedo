.modal.in
    display block

svg
    max-height 100vmin

circle
    transition all 1s

.rooms polygon
    fill #ddd

.rooms path
    fill none
    stroke black
    stroke-width 0.75

.rooms polygon:hover, .cell:hover
    fill #aaa

.rooms #middle polygon
    fill #111

.rooms text
    font-family sans-serif
    font-size 4px
    text-align center
    text-anchor middle
    pointer-events none

[data-final=true],
.rooms polygon[data-final=true]
    fill green

.diceContainer
    width 200px
    height 200px
    position relative
    display inline-block
    transform-style preserve-3d
    transform translateZ(100px)

.contd1
    animation roll1 3s ease-out
.contd2
    animation roll2 3s ease-out

.dice
    width 100%
    height 100%
    position absolute
    transform translateZ( -100px )
    transform-style preserve-3d

.dice figure
    width 196px
    height 196px
    display block
    position absolute
    border 2px solid black
    backface-visibility hidden
    line-height 196px
    font-size 120px
    font-weight bold
    color #111
    text-align center
    background-color #fff

@keyframes roll1
    from
        transform rotateX(778deg) rotateY(436deg) rotateZ(-324deg) translateZ(100px)
    to
        transform rotateX(0deg) rotateY(0deg) rotateZ(0deg) translateZ(100px)

@keyframes roll2
    from
        transform rotateX(584deg) rotateY(-894deg) rotateZ(478deg) translateZ(100px)
    to
        transform rotateX(0deg) rotateY(0deg) rotateZ(0deg) translateZ(100px)

.dice .face-1
    transform rotateY(   0deg ) translateZ( 100px )
.dice .face-2
    transform rotateX( 180deg ) translateZ( 100px )
.dice .face-3
    transform rotateY(  90deg ) translateZ( 100px )
.dice .face-4
    transform rotateY( -90deg ) translateZ( 100px )
.dice .face-5
    transform rotateX(  90deg ) translateZ( 100px )
.dice .face-6
    transform rotateX( -90deg ) translateZ( 100px )

.dice.show-1
    transform translateZ( -100px ) rotateY(    0deg )
.dice.show-2
    transform translateZ( -100px ) rotateX( -180deg )
.dice.show-3
    transform translateZ( -100px ) rotateY(  -90deg )
.dice.show-4
    transform translateZ( -100px ) rotateY(   90deg )
.dice.show-5
    transform translateZ( -100px ) rotateX(  -90deg )
.dice.show-6
    transform translateZ( -100px ) rotateX(   90deg )

.modal-backdrop:not(.in)
    display none

.bg-checked
    background-color #428bca
    color #fff

.text-proposed
    color #a94442

    &.bg-checked
        background-color #f2dede

.text-seen
    color #31708f

    &.bg-checked
        background-color #d9edf7

.text-owned
    color #3c763d

    &.bg-checked
        background-color #dff0d8

.modal-header img
    width 50vmin
